@model WEBSHOP_CKLT.Models.entity_framework.News
@{
    ViewBag.Title = "Chi tiết tin tức";

}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .news_section_container {
        margin-top: 180px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 3px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 200px;
        max-height: 200px;
        text-align:center;
    }

    .row-item-news {
        margin-bottom: 10px;
    }
</style>

<<div class="container news_section_container">

    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news">@Model.Title</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Model.Description
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.Raw(Model.Detail)
            </div>
        </div>

    }


</div>


