@model IEnumerable<WEBSHOP_CKLT.Models.entity_framework.Product>
@if (Model != null && Model.Any())
{
    <!-- Product 1 -->
    foreach (var item in Model)
    {
        var strImge = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImge = img.Image;

        }
        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImge" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                }
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.ID)">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@WEBSHOP_CKLT.Models.Common.Common.FormatNumber(item.PriceSale, 0)<span>@WEBSHOP_CKLT.Models.Common.Common.FormatNumber(item.Price, 0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@WEBSHOP_CKLT.Models.Common.Common.FormatNumber(item.Price, 0) </div>

                    }


                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.ID">Thêm vào giỏ hàng</a></div>
        </div>
    }

    <style>
        .add_to_cart_button {
            width: 80%;
            visibility: hidden;
            opacity: 0;        
            -o-transition: all 0.3s ease;
            transition: all 0.3s ease;
        }
    </style>
}

